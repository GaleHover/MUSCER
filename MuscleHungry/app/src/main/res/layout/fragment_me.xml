<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragment.MeFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
      <!--头-->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="300dp"
          android:orientation="horizontal"
          android:background="#8bc34a"
          >
          <ImageView
              android:layout_width="150dp"
              android:layout_height="150dp"
              android:layout_gravity="center_vertical"
              android:layout_marginLeft="100dp"
              android:src="@drawable/hometouxiang"/>
          <TextView
              android:id="@+id/nicheng"
              android:layout_width="wrap_content"
              android:layout_height="50dp"
              android:textSize="34sp"
              android:textStyle="bold"
              android:layout_marginLeft="140dp"
              android:layout_gravity="center"
              android:textColor="#FFF"
              android:text="昵称 >"/>
      </LinearLayout>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="1dp"/>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="80dp"
          android:orientation="horizontal"
          android:background="#8bc34a">
          <ImageView
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="match_parent"
              android:scaleType="centerInside"
              android:background="@drawable/heng1"/>
          <TextView
          android:layout_width="1dp"
          android:background="#FFF"
          android:layout_height="match_parent"/>
          <ImageView
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="match_parent"
              android:scaleType="centerCrop"
              android:background="@drawable/heng2"/>
          <TextView
              android:layout_width="1dp"
              android:background="#FFF"
              android:layout_height="match_parent"/>
          <ImageView
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="match_parent"
              android:scaleType="centerCrop"
              android:background="@drawable/heng3"/>
      </LinearLayout>

<TextView
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:text="商家信息"
    android:background="#8bc34a"
    android:gravity="center"
    android:textColor="#FFF"
    android:textSize="20sp"
    android:layout_marginTop="3dp"
    >
</TextView>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <TextView
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="50dp"
              android:text="商家信息"
              android:background="#8bc34a"
              android:gravity="center"
              android:textColor="#FFF"
              android:textSize="20sp"
              android:layout_marginRight="3dp"
              android:layout_marginTop="1dp"

              />
          <TextView
              android:id="@+id/shangjia"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="50dp"
              android:text="商家信息"
              android:background="#8bc34a"
              android:gravity="center"
              android:textColor="#FFF"
              android:layout_marginTop="1dp"
              android:textSize="20sp"
              />
      </LinearLayout>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:layout_marginTop="2dp"
          android:textSize="20sp"
          android:textStyle="bold"
          android:background="#8bc34a"
          android:gravity="center"
          android:textColor="#FFF"
          android:text="管理收货地址"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:layout_marginTop="2dp"
          android:textSize="20sp"
          android:textStyle="bold"
          android:background="#FFF"
          android:gravity="center"
          android:textColor="#8bc34a"
          android:text="积分商城"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:layout_marginTop="2dp"
          android:textSize="20sp"
          android:textStyle="bold"
          android:background="#8bc34a"
          android:gravity="center"
          android:textColor="#FFF"
          android:text="我的收藏"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:layout_marginTop="2dp"
          android:textSize="20sp"
          android:textStyle="bold"
          android:background="#FFF"
          android:gravity="center"
          android:textColor="#8bc34a"
          android:text="修改密码"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:layout_marginTop="2dp"
          android:textSize="20sp"
          android:textStyle="bold"
          android:background="#8bc34a"
          android:gravity="center"
          android:textColor="#FFF"
          android:text="联系客服"/>
      <TextView
          android:id="@+id/tuichudenglu"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="2dp"
          android:textSize="20sp"
          android:textStyle="bold"
          android:background="#FFF"
          android:gravity="center"
          android:textColor="#8bc34a"
          android:text="退出登录"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
